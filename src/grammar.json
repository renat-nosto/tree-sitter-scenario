{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "scenario",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "expr"
      }
    },
    "expr": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "statement"
        },
        {
          "type": "SYMBOL",
          "name": "flow_control"
        }
      ]
    },
    "statement": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "command"
        },
        {
          "type": "SYMBOL",
          "name": "newline"
        }
      ]
    },
    "command": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "conf"
        },
        {
          "type": "SYMBOL",
          "name": "complex"
        }
      ]
    },
    "conf": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "conf"
        },
        {
          "type": "SYMBOL",
          "name": "var"
        },
        {
          "type": "STRING",
          "value": "="
        },
        {
          "type": "SYMBOL",
          "name": "str"
        }
      ]
    },
    "var": {
      "type": "SYMBOL",
      "name": "word"
    },
    "fn": {
      "type": "SYMBOL",
      "name": "word"
    },
    "complex": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "fn"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "arg"
          }
        }
      ]
    },
    "arg": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "word"
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "SYMBOL",
              "name": "word"
            },
            {
              "type": "STRING",
              "value": ":"
            },
            {
              "type": "SYMBOL",
              "name": "word"
            }
          ]
        }
      ]
    },
    "word": {
      "type": "PATTERN",
      "value": "[^\\s=:]+"
    },
    "str": {
      "type": "PATTERN",
      "value": "[^\\s]+"
    },
    "block": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "indent"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "expr"
          }
        },
        {
          "type": "SYMBOL",
          "name": "dedent"
        }
      ]
    },
    "flow_control": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "command"
        },
        {
          "type": "SYMBOL",
          "name": "block"
        }
      ]
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "indent"
    },
    {
      "type": "SYMBOL",
      "name": "dedent"
    },
    {
      "type": "SYMBOL",
      "name": "newline"
    }
  ],
  "inline": [],
  "supertypes": []
}
